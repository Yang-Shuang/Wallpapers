<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape>
                    <size android:width="3000dp" android:height="100dp" />
                    <solid android:color="@color/white" />
                </shape>
            </item>
            <item android:height="0.5dp" android:gravity="bottom">
                <shape>
                    <size android:width="3000dp" android:height="0.5dp" />
                    <solid android:color="@color/black" />
                </shape>
            </item>
        </layer-list>

    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <size android:width="3000dp" android:height="100dp" />
                    <solid android:color="@color/gray" />
                </shape>
            </item>
            <item android:height="0.5dp" android:gravity="bottom">
                <shape>
                    <size android:width="3000dp" android:height="0.5dp" />
                    <solid android:color="@color/black" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>